@model GFS.Models.DB.Catagory

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Admin.cshtml";
}
<div class="row">
    <!-- Start col -->
    <div class="col-lg-12 col-xl-4">
        <div class="card m-b-30">
            <div class="card-header">
                <h4 class="card-title mb-0">Add New Product Catagories</h4>
            </div>
            <div class="card-body pb-0">
                <form action="@Url.Action("Create", "Catagories")" method="post" enctype="multipart/form-data">

                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-12" })
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", @placeholder="Product Catagories" } })
                                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                           <label class="control-label col-md-12">Upload Catagory Photo</label>
                            <div class="col-md-12">
                                <input type="file" name="Picture" placeholder="Upload Picture" />
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-12">
                                <input type="submit" value="Add" class="btn btn-block btn-success" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
