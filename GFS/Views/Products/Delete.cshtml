@model GFS.Models.DB.Product

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Admin.cshtml";
}



<div class="row">
    <!-- Start col -->
    <div class="col-lg-12 col-xl-6">
        <div class="card m-b-30">
            <div class="card-header">
                <h5 class="card-title mb-0">Delete</h5>
            </div>
            <div class="card-body pb-0">
                <div class="row align-items-center">
                    <div class="col-6">
                        <h4 class="text-danger">Are you sure you want to delete this?</h4>

                        <p class="text-success">@Model.Name  (@Model.Catagory.Title)</p>

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-actions no-color">
                                <input type="submit" value="Delete" class="btn btn-danger" /> |
                                @Html.ActionLink("Back to List", "Index")
                            </div>
                        }

                    </div>
                    <div class="col-6 text-right">
                        <p class="mb-0"><i class="ri-delete-bin-3-fill text-danger" text-success align-middle font-18 mr-1"></i></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>