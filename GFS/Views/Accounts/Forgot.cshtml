@model GFS.Models.DB.Account

@{
    ViewBag.Title = "Forgot";
    Layout = "~/Views/Shared/_Login.cshtml";
}

<form method="get" action="@Url.Action("Conform","Accounts")">
    <div class="form-horizontal">
        <h4>Account</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.UserId)



        <div class="form-group">
            <label class="control-label col-md-12"> Enter your Register Email Address</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Conform" class="btn btn-success" />
            </div>
        </div>
    </div>
</form>
