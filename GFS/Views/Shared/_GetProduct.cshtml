                                </div>
                                <div class="column">
                                    <img class="demo cursor" src="@Url.Content("Assets/Images/"+Model.File3)" style="width: 100px; height: 100px " onclick="currentSlide(3)">
                                </div>
                                <div class="column">
                                    <img class="demo cursor" src="@Url.Content("Assets/Images/"+Model.File4)" style="width: 100px; height: 100px " onclick="currentSlide(4)" >
                                </div>
                                
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-6">
                        <div class="view-details">
                            <h3 class="view-name"><a href="product-video.html">@Model.Name</a></h3>
                            <div class="view-meta">
